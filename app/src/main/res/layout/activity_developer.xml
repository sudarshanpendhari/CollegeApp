<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".DeveloperActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:id="@+id/teacherImage"
            android:layout_height="150dp"
            android:src="@drawable/sp"
            android:layout_weight="0.5"
            android:padding="8dp"
            android:layout_gravity="center_vertical"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="Sudarshan Ramesh Pendhari"
                android:textSize="@dimen/title_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text=" [Tech enthusiast and Passionate Learner]"

                android:textSize="@dimen/title_size" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="@dimen/text_margin"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"

                android:fontFamily="@string/bold"
                android:padding="5dp"
                android:text="Contact Details:"

                android:textSize="@dimen/title_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@string/regular"
                android:padding="5dp"
                android:text="+91 8788246406\n sudarshanrpendhari@gmail.com"
                android:textSize="@dimen/title_size2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"

                android:fontFamily="@string/bold"
                android:padding="5dp"
                android:text="Address:"

                android:textSize="@dimen/title_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"

                android:fontFamily="@string/regular"
                android:padding="5dp"
                android:text="Holkar Nagar, Station Road, Lasalgaon,Dist-Nashik, Maharashtra 423101"

                android:textSize="@dimen/title_size2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Feel free to connect me:"
            android:textStyle="bold"

            android:textSize="@dimen/title_size"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/linkedin"
                app:srcCompat="@drawable/linkedin"
                android:layout_marginRight="30dp"
                android:scaleType="fitXY"
                />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/github"
                app:srcCompat="@drawable/github"
                android:scaleType="fitXY"
                />
        </LinearLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>